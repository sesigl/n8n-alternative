{
  "name": "n8n-alternative",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Modern workflow automation platform",
  "workspaces": [
    "packages/*",
    "packages/workflow-nodes/*"
  ],
  "catalog": {
    "typescript": "5.9.3",
    "uuid": "13.0.0",
    "zod": "4.1.12"
  },
  "scripts": {
    "dev": "bun run --workspaces dev",
    "build": "bun run --workspaces build",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "bun run check:pinned-versions && bun run check:imports && bun run lint && bun run build && bun test",
    "check:imports": "bash scripts/check-imports.sh",
    "check:pinned-versions": "bash scripts/check-pinned-versions.sh",
    "clean": "bun run --workspaces clean && rm -rf node_modules",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/bun": "1.3.1",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.1",
  "engines": {
    "node": "24.11.0",
    "bun": "1.3.1"
  }
}
