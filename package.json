{
  "name": "n8n-alternative",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Modern workflow automation platform",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm --filter './apps/*' build",
    "test": "pnpm vitest run",
    "test:coverage": "pnpm vitest run --coverage",
    "lint": "biome check .",
    "format": "biome check --write .",
    "check": "pnpm check:pinned-versions && pnpm lint && pnpm check:types && pnpm test && pnpm build",
    "check:types": "pnpm -r check:types",
    "check:pinned-versions": "bash scripts/check-pinned-versions.sh",
    "clean": "pnpm -r exec rm -rf dist && rm -rf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": "24.12.0",
    "pnpm": "10.26.2"
  }
}
