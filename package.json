{
  "name": "n8n-alternative",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Modern workflow automation platform",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm vitest run",
    "test:coverage": "pnpm vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "pnpm check:pinned-versions && pnpm check:imports && pnpm lint && pnpm check:types && pnpm test",
    "check:types": "pnpm -r check:types",
    "check:imports": "bash scripts/check-imports.sh",
    "check:pinned-versions": "bash scripts/check-pinned-versions.sh",
    "clean": "pnpm -r exec rm -rf dist && rm -rf node_modules",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@changesets/cli": "2.29.7",
    "@types/js-yaml": "^4.0.9",
    "@vitest/coverage-v8": "4.0.6",
    "js-yaml": "^4.1.0",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.6"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": "24.11.0",
    "pnpm": "10.20.0"
  }
}
